#!/bin/bash
# sourced by .bashrc

export LANG=en_US.UTF-8
export LC_ALL=en_US.utf8
export PATH=/bin:/usr/bin:/sbin:/usr/sbin:/opt/java/jre/bin:/opt/kde/bin:/usr/bin/perlbin/site:/usr/bin/perlbin/vendor:/usr/bin/perlbin/core:/opt/qt/bin:/usr/local/bin:$HOME/.bin

export HISTIGNORE="&:ls:ll:la:cd:exit:clear"
export HISTSIZE=20000
export HISTFILESIZE=20000
export HISTTIMEFORMAT="[%Y-%m-%d - %H:%M:%S] "

export MPD_HOST=127.0.0.1
export MPD_PORT=6600

if [ -z "$DISPLAY" ]; then
  export BROWSER=elinks
else
  export BROWSER=firefox
fi

export PAGER=less
export EDITOR=vim
export VISUAL=vim

export LESS_TERMCAP_mb=$'\E[01;31m'             # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'        # begin bold
export LESS_TERMCAP_me=$'\E[0m'                 # end mode
export LESS_TERMCAP_se=$'\E[0m'                 # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'          # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'                 # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;146m'       # begin underline
