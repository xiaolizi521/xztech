/* tooltips EXPERIMENTAL */
.tooltip {
    position:relative;
    z-index:24;
}

.tooltip:hover {
	z-index:25;
}

.tooltip div {
	display: none;
}

/* for clickable <span>'s */

.clickable {
	color: black;
	font-style: italic;
	text-decoration: underline; 
}
.clickable:hover {
	color: black;
	background: #DDDDDD;
	font-style: italic;
}
.tooltip div .clickable:hover {
	cursor: help;
	background: #DDDDDD;
}

.tooltip:hover div.tipspacer {
	display: block; 
	position: absolute;
	top: 0em; left: 0em;
	padding: 0em;

	width: 15em; height: 1em;
	
	border: none 1px;
	background: clear; 
}

.tooltip:hover div.tooltip {
	display: block; 
	position: absolute;
	top: 1em; left: 5em;
	padding: 0.5em;

	width: 15em;

	border: black 1px solid; 
	text-decoration: none; 
	background: white; 
	color: black;
	font-style: normal;
	font-weight: normal;
}


